rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEFENSE MODE: Allow all authenticated users to read/write
    // This ensures all functionality works for your capstone defense
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isResident() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'resident';
    }
    
    function isOfficial() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'official';
    }
    
    // Users collection - allow authenticated access
    match /users/{userId} {
      allow read, write: if isAuthenticated();
      allow create: if isAuthenticated();
    }

    // Bookings collection - allow authenticated access
    match /bookings/{bookingId} {
      allow read, write: if isAuthenticated();
      allow create: if isAuthenticated();
    }

    // Events collection - allow authenticated access  
    match /events/{eventId} {
      allow read, write: if isAuthenticated();
      allow create: if isAuthenticated();
    }

    // Verification Requests - allow authenticated access
    match /verificationRequests/{requestId} {
      allow read, write: if isAuthenticated();
      allow create: if isAuthenticated();
    }

    // Notifications - allow authenticated access
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
      allow create: if isAuthenticated();
    }

      match /facilities/{facilityId} {
    allow read: if isAuthenticated();
    allow create, update, delete: if isOfficial();
   }
  }
}
